{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"emitDeclarationOnly": false,
		"experimentalDecorators": true,
		"target": "es6",
		"declarationDir": "./dist",
		"outDir": "./dist",
		"baseUrl": "./src"
	  },
	  "include": [
		"src/**/*"
	  ],
	  "exclude": [
		"node_modules",
		"src/**/*.test.*"
	  ]
}